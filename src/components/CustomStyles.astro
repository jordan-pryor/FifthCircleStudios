---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* Base Fonts */
    --aw-font-sans: 'IBM Plex Sans';
    --aw-font-serif: 'IBM Plex Sans';
    --aw-font-heading: 'IBM Plex Sans';

    /* Primary Theme Colors */
    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    /* Light Theme Colors */
    --aw-color-bg-page: hsl(231, 15%, 18%); /* #282a36 */
    --aw-color-current-line: hsl(231, 25%, 25%); /* Similar to #44475a */
    --aw-color-selection: hsl(231, 15%, 30%); /* Similar to #44475a */
    --aw-color-text-heading: hsl(60, 30%, 96%); /* #f8f8f2 */
    --aw-color-text-default: hsl(60, 30%, 96%); /* #f8f8f2 */
    --aw-color-text-muted: hsl(225, 27%, 51%); /* #6272a4 */
    --aw-color-cyan: hsl(191, 97%, 77%); /* #8be9fd */
    --aw-color-green: hsl(135, 94%, 65%); /* #50fa7b */
    --aw-color-orange: hsl(31, 100%, 71%); /* #ffb86c */
    --aw-color-pink: hsl(326, 100%, 74%); /* #ff79c6 */
    --aw-color-purple: hsl(265, 89%, 78%); /* #bd93f9 */
    --aw-color-red: hsl(0, 100%, 67%); /* #ff5555 */
    --aw-color-yellow: hsl(65, 92%, 76%); /* #f1fa8c */
    --aw-color-caret: var(--aw-color-text-heading);
    --aw-color-block-caret: var(--aw-color-caret);
    --aw-color-highlight: var(--aw-color-yellow);
    --aw-color-shadow: hsl(0, 0%, 0%);
    --aw-color-stack: hsl(var(--aw-color-text-muted), 100%, 75%);
    --aw-color-darken: hsl(0, 0%, 13%);

    /* Colorish values for extra coloring */
    --redish: var(--aw-color-red);
    --orangeish: var(--aw-color-orange);
    --yellowish: var(--aw-color-yellow);
    --greenish: var(--aw-color-green);
    --cyanish: var(--aw-color-cyan);
    --bluish: var(--aw-color-accent);
    --pinkish: var(--aw-color-pink);
    --purplish: var(--aw-color-purple);

    ::selection {
      background-color: hsl(231, 15%, 80%); /* Light gray for selection */
      color: hsl(231, 15%, 10%); /* Dark text for contrast */
    }
  }

  .dark {
    /* Dark Theme Colors */
    --aw-color-bg-page: hsl(231, 15%, 18%); /* #282a36 */
    --aw-color-current-line: hsl(232, 14%, 31%); /* #44475a */
    --aw-color-selection: hsl(232, 14%, 31%); /* #44475a */
    --aw-color-text-heading: hsl(60, 30%, 96%); /* #f8f8f2 */
    --aw-color-text-default: hsl(60, 30%, 96%); /* #f8f8f2 */
    --aw-color-text-muted: hsl(225, 27%, 51%); /* #6272a4 */
    --aw-color-cyan: hsl(191, 97%, 77%); /* #8be9fd */
    --aw-color-green: hsl(135, 94%, 65%); /* #50fa7b */
    --aw-color-orange: hsl(31, 100%, 71%); /* #ffb86c */
    --aw-color-pink: hsl(326, 100%, 74%); /* #ff79c6 */
    --aw-color-purple: hsl(265, 89%, 78%); /* #bd93f9 */
    --aw-color-red: hsl(0, 100%, 67%); /* #ff5555 */
    --aw-color-yellow: hsl(65, 92%, 76%); /* #f1fa8c */
    --aw-color-caret: var(--aw-color-text-heading);
    --aw-color-block-caret: var(--aw-color-caret);
    --aw-color-highlight: var(--aw-color-yellow);
    --aw-color-shadow: hsl(0, 0%, 0%);
    --aw-color-stack: hsl(var(--aw-color-text-muted), 100%, 75%);
    --aw-color-darken: hsl(0, 0%, 13%);

    ::selection {
      background-color: var(--aw-color-selection); /* Selection */
      color: snow;
    }
  }
</style>

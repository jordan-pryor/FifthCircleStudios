---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: hsl(225, 100%, 75%); /* Blue */
    --aw-color-secondary: hsl(326, 100%, 74%); /* Pink */
    --aw-color-accent: hsl(265, 89%, 78%); /* Purple */

    --aw-color-text-heading: rgb(76, 79, 105); /* Text */
    --aw-color-text-default: rgb(92, 95, 119); /* Subtext1 */
    --aw-color-text-muted: rgba(92, 95, 119, 0.66); /* Subtext0 */
    --aw-color-bg-page: rgb(239, 241, 245); /* Base */

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: rgb(139, 233, 253); /* Cyan */
    --aw-color-secondary: rgb(255, 121, 198); /* Pink */
    --aw-color-accent: rgb(189, 147, 249); /* Purple */

    --aw-color-text-heading: rgb(248, 248, 242); /* Foreground Color */
    --aw-color-text-default: rgb(229, 236, 246); /* Light text */
    --aw-color-text-muted: rgb(229, 236, 246, 0.66); /* Muted text */
    --aw-color-bg-page: rgb(40, 42, 54); /* Background */

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>

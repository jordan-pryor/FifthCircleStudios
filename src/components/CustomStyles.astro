---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'IBM Plex Sans';
    --aw-font-serif: 'IBM Plex Sans';
    --aw-font-heading: 'IBM Plex Sans';

    /* Static Palette Colors */
    --aw-color-foreground: hsl(60, 30%, 96%); /* #f8f8f2 */
    --aw-color-red: hsl(0, 100%, 67%);        /* #ff5555 */
    --aw-color-orange: hsl(31, 100%, 71%);    /* #ffb86c */
    --aw-color-yellow: hsl(65, 92%, 76%);     /* #f1fa8c */
    --aw-color-green: hsl(135, 94%, 65%);     /* #50fa7b */
    --aw-color-cyan: hsl(191, 97%, 77%);      /* #8be9fd */
    --aw-color-blue: hsl(225, 100%, 75%);     /* #809fff */
    --aw-color-pink: hsl(326, 100%, 74%);     /* #ff79c6 */
    --aw-color-purple: hsl(265, 89%, 78%);    /* #bd93f9 */

    /* Variant-specific Colors */
    --aw-color-background: hsl(231, 15%, 18%); /* #282a36 */
    --aw-color-selection: color(var(--aw-color-background)); /* #414458 */
    --aw-color-comment: color(var(--aw-color-blue)); /* #6272a4 */
    --aw-color-line-highlight: color(var(--aw-color-background)); /* #414458 */
    --aw-color-accent: var(--aw-color-blue);

    /* UI Elements */
    --aw-color-caret: var(--aw-color-foreground);
    --aw-color-block-caret: var(--aw-color-caret);
    --aw-color-highlight: var(--aw-color-yellow);
    --aw-color-shadow: hsl(0, 0%, 0%);
    --aw-color-stack: color(var(--aw-color-comment));
    --aw-color-darken: hsl(0, 0%, 13%);

    /* Sublime-specific Colors */
    --redish: var(--aw-color-red);
    --orangeish: var(--aw-color-orange);
    --yellowish: var(--aw-color-yellow);
    --greenish: var(--aw-color-green);
    --cyanish: var(--aw-color-cyan);
    --bluish: var(--aw-color-blue);
    --pinkish: var(--aw-color-pink);
    --purplish: var(--aw-color-purple);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-color-bg-page: var(--aw-color-background); /* Background */
    --aw-color-current-line: var(--aw-color-line-highlight); /* Current Line */
    --aw-color-selection: var(--aw-color-selection); /* Selection */

    --aw-color-text-heading: var(--aw-color-foreground); /* Foreground */
    --aw-color-text-default: var(--aw-color-foreground); /* Foreground */
    --aw-color-text-muted: var(--aw-color-comment); /* Comment */

    --aw-color-primary: var(--aw-color-cyan); /* Cyan */
    --aw-color-secondary: var(--aw-color-green); /* Green */
    --aw-color-accent: var(--aw-color-purple); /* Purple */

    --aw-color-red: var(--aw-color-red); /* Red */
    --aw-color-orange: var(--aw-color-orange); /* Orange */
    --aw-color-pink: var(--aw-color-pink); /* Pink */
    --aw-color-yellow: var(--aw-color-yellow); /* Yellow */

    ::selection {
      background-color: var(--aw-color-selection); /* Selection */
      color: snow;
    }
  }

  .light {
    /* Light Theme Colors */
    --aw-color-bg-page: hsl(0, 0%, 100%); /* White Background */
    --aw-color-current-line: hsl(231, 15%, 92%); /* Light gray for current line */
    --aw-color-selection: hsl(231, 15%, 80%); /* Light gray for selection */

    --aw-color-text-heading: hsl(231, 15%, 10%); /* Dark text */
    --aw-color-text-default: hsl(231, 15%, 15%); /* Slightly lighter dark text */
    --aw-color-text-muted: hsl(231, 15%, 30%); /* Muted text */

    --aw-color-primary: hsl(191, 97%, 77%); /* Cyan */
    --aw-color-secondary: hsl(135, 94%, 65%); /* Green */
    --aw-color-accent: hsl(265, 89%, 78%); /* Purple */

    --aw-color-red: hsl(0, 100%, 67%); /* Red */
    --aw-color-orange: hsl(31, 100%, 71%); /* Orange */
    --aw-color-pink: hsl(326, 100%, 74%); /* Pink */
    --aw-color-yellow: hsl(65, 92%, 76%); /* Yellow */

    ::selection {
      background-color: hsl(231, 15%, 80%); /* Selection */
      color: hsl(231, 15%, 10%); /* Dark text for contrast */
    }
  }
</style>

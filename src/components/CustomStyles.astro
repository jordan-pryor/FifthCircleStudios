---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'IBM Plex Sans';
    --aw-font-serif: 'IBM Plex Sans';
    --aw-font-heading: 'IBM Plex Sans';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: #f4dbd6;
    --aw-color-secondary: #f0c6c6;
    --aw-color-accent: #f5bde6;

    --aw-color-text-heading: #cad3f5;
    --aw-color-text-default: #b8c0e0;
    --aw-color-text-muted: #a5adcb;
    --aw-color-bg-page: #24273a;

    --aw-color-rosewater: #f4dbd6;
    --aw-color-flamingo: #f0c6c6;
    --aw-color-pink: #f5bde6;
    --aw-color-mauve: #c6a0f6;
    --aw-color-red: #ed8796;
    --aw-color-maroon: #ee99a0;
    --aw-color-peach: #f5a97f;
    --aw-color-yellow: #eed49f;
    --aw-color-green: #a6da95;
    --aw-color-teal: #8bd5ca;
    --aw-color-sky: #91d7e3;
    --aw-color-sapphire: #7dc4e4;
    --aw-color-blue: #8aadf4;
    --aw-color-lavender: #b7bdf8;
    --aw-color-subtext1: #b8c0e0;
    --aw-color-subtext0: #a5adcb;
    --aw-color-overlay2: #939ab7;
    --aw-color-overlay1: #8087a2;
    --aw-color-overlay0: #6e738d;
    --aw-color-surface2: #5b6078;
    --aw-color-surface1: #494d64;
    --aw-color-surface0: #363a4f;
    --aw-color-base: #24273a;
    --aw-color-mantle: #1e2030;
    --aw-color-crust: #181926;

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  .light {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: #dc8a78;
    --aw-color-secondary: #dd7878;
    --aw-color-accent: #ea76cb;

    --aw-color-text-heading: #4c4f69;
    --aw-color-text-default: #5c5f77;
    --aw-color-text-muted: #6c6f85;
    --aw-color-bg-page: #eff1f5;

    --aw-color-rosewater: #dc8a78;
    --aw-color-flamingo: #dd7878;
    --aw-color-pink: #ea76cb;
    --aw-color-mauve: #8839ef;
    --aw-color-red: #d20f39;
    --aw-color-maroon: #e64553;
    --aw-color-peach: #fe640b;
    --aw-color-yellow: #df8e1d;
    --aw-color-green: #40a02b;
    --aw-color-teal: #179299;
    --aw-color-sky: #04a5e5;
    --aw-color-sapphire: #209fb5;
    --aw-color-blue: #1e66f5;
    --aw-color-lavender: #7287fd;
    --aw-color-subtext1: #5c5f77;
    --aw-color-subtext0: #6c6f85;
    --aw-color-overlay2: #7c7f93;
    --aw-color-overlay1: #8c8fa1;
    --aw-color-overlay0: #9ca0b0;
    --aw-color-surface2: #acb0be;
    --aw-color-surface1: #bcc0cc;
    --aw-color-surface0: #ccd0da;
    --aw-color-base: #eff1f5;
    --aw-color-mantle: #e6e9ef;
    --aw-color-crust: #dce0e8;
  }
</style>
